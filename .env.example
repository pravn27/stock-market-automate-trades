# Example Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# OpenAlgo Configuration
OPENALGO_API_KEY=your_openalgo_api_key_here
OPENALGO_HOST=http://localhost:5000

# Shoonya/Finvasia Credentials (configured in OpenAlgo)
# These are set in OpenAlgo dashboard, not here
# SHOONYA_USER_ID=your_user_id
# SHOONYA_PASSWORD=your_password
# SHOONYA_API_KEY=your_api_key

# Trading Configuration
TRADING_MODE=sandbox  # sandbox, paper, or live
RISK_PER_TRADE=0.01   # 1% risk per trade
MIN_RISK_REWARD=2.5   # Minimum 2.5:1 risk-reward ratio
MAX_DAILY_LOSS=0.03   # 3% maximum daily loss
MAX_POSITIONS=3       # Maximum concurrent positions

# Database
DATABASE_URL=sqlite:///data/trades.db

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_RETENTION_DAYS=1825  # 5 years for compliance

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate_a_random_secret_key_here
